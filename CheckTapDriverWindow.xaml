<Window x:Class="WpfApp1.CheckTapDriverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="检查TAP驱动" Height="200" Width="400"
        ResizeMode="NoResize"
        Background="#F0F0F0"
        FontFamily="Segoe UI" FontSize="14"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Name="txtMessage" Text="正在检查TAP驱动..." VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10"/>
        <Button Name="btnInstall" Content="安装TAP驱动" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10" Click="BtnInstall_Click" Visibility="Collapsed"/>
    </Grid>
</Window>